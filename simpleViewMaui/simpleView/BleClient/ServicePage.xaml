<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:bleclient="clr-namespace:simpleView.BleClient"
    x:DataType="bleclient:ServiceViewModel"
    x:Class="simpleView.BleClient.ServicePage"
    Title="Service">

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label Text="{Binding Title, StringFormat='Service UUID: {0}'}"
                   Grid.Row="0" />

            <CollectionView ItemsSource="{Binding Characteristics}"
                            SelectedItem="{Binding SelectedCharacteristic}"
                            SelectionMode="Single"
                            Grid.Row="1">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="bleclient:CharacteristicViewModel">
                        <StackLayout>
                            <Label Text="{Binding UUID}" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ContentPage.Content>
</ContentPage>
