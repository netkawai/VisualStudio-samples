<Window
    x:Class="WpfApp1Blend.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WpfApp1Blend"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="MainWindow"
    Width="800"
    Height="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border
            Grid.ColumnSpan="3"
            Panel.ZIndex="10"
            BorderBrush="Black"
            BorderThickness="4"
            CornerRadius="3" />

        <Button
            Grid.Row="0"
            Grid.Column="2"
            Width="169"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Button"
            RenderTransformOrigin="-0.647,0.623"
            Style="{DynamicResource ButtonStyle}" />
        <wv2:WebView2
            Name="webView"
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Source="{Binding Url}"
            Visibility="Collapsed" />

    </Grid>
</Window>
